private void LoadData()
{
    try
    {
        conn.Open();
        string query = "SELECT * FROM Pjuridica";
        SqlDataAdapter SDA = new SqlDataAdapter(query, conn);
        DataTable dt = new DataTable();
        SDA.Fill(dt);

        pjuridicaDataGridView.DataSource = dt;
        HabilitarDesabilitarFormulario(false); // Desabilitar formulário após carregar dados
    }
    catch (Exception ex)
    {
        MessageBox.Show("Erro ao carregar dados: " + ex.Message);
    }
    finally
    {
        conn.Close();
    }
}

private void btnUpdate_Click(object sender, EventArgs e)
{
    // Habilitar formulário para edição
    HabilitarDesabilitarFormulario(true);
    if (pjuridicaDataGridView.SelectedRows.Count > 0)
    {
        int rowIndex = pjuridicaDataGridView.SelectedRows[0].Index;
        try
        {
            conn.Open();
            // Seu código de atualização aqui
            // ...
            // Após a atualização
            MessageBox.Show("Registro atualizado com sucesso!");
            LoadData(); // Recarregar dados
            HabilitarDesabilitarFormulario(false); // Desabilitar formulário após atualização
        }
        catch (Exception ex)
        {
            MessageBox.Show("Erro ao atualizar registro: " + ex.Message);
        }
        finally
        {
            conn.Close();
        }
    }
    else
    {
        // Lidar com nenhum registro selecionado
    }
}
// Adicione uma variável de controle global para indicar se o formulário está habilitado para edição
private bool formularioHabilitado = false;

public Pjuridica()
{
    InitializeComponent();
    HabilitarDesabilitarFormulario(false); // Desabilita o formulário no início
}

// Método para habilitar ou desabilitar os controles do formulário
private void HabilitarDesabilitarFormulario(bool habilitar)
{
    txtName.Enabled = habilitar;
    txtAddres.Enabled = habilitar;
    // Continue para todos os outros controles que você deseja habilitar/desabilitar
}

private void btnUpdate_Click(object sender, EventArgs e)
{
    if (!formularioHabilitado) // Se o formulário não estiver habilitado
    {
        HabilitarDesabilitarFormulario(true); // Habilita o formulário
        formularioHabilitado = true; // Atualiza a variável de controle
        btnUpdate.Text = "Salvar"; // Altera o texto do botão para "Salvar"
    }
    else // Se o formulário estiver habilitado
    {
        // Lógica para atualizar os dados no banco de dados
        // Certifique-se de incluir todas as instruções necessárias para atualizar os dados
        // Após a atualização bem-sucedida, desabilite o formulário novamente
        HabilitarDesabilitarFormulario(false); // Desabilita o formulário
        formularioHabilitado = false; // Atualiza a variável de controle
        btnUpdate.Text = "Atualizar"; // Altera o texto do botão para "Atualizar"
    }
}

